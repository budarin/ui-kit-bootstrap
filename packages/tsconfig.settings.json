{
    "compilerOptions": {
        "resolveJsonModule": false,
        "composite": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": true,
        "strict": true,
        "jsx": "react",

        "skipLibCheck": true,
        "importHelpers": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": ["node_modules", "lib", "**/*.spec.ts", "__tests__"]
    //  ?? "include": ["node_modules/budarin-simple-apple-icon", "node_modules/budarin-simple-text"]
}
