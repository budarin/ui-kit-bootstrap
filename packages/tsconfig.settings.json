{
    "compilerOptions": {
        "resolveJsonModule": false,
        "composite": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "jsx": "react",

        "importHelpers": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": ["node_modules", "lib"]
}
